{
    "name": "information-visualisation-g1",
    "version": "1.0.0",
    "description": "Un projet de visualisation d'informations utilisant D3.js avec Node.js et TypeScript",
    "main": "dist/index.js",
    "scripts": {
            "build": "tsc && npm run copy-assets",
            "copy-assets": "copy public\\*.html dist\\ && copy public\\*.css dist\\ && copy public\\*.csv dist\\ && copy public\\*.json dist\\",
            "dev": "ts-node src/index.ts",
            "start": "node dist/index.js",
            "serve": "npm run build && http-server dist -p 3000 -o",
            "watch": "tsc --watch",
            "test": "ts-node test/runner.ts"
        },
    "keywords": [
        "d3.js",
        "typescript",
        "visualization",
        "data"
    ],
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "@types/d3": "^7.4.0",
        "@types/node": "^20.5.0",
        "http-server": "^14.1.1",
        "ts-node": "^10.9.1",
        "typescript": "^5.1.6"
    },
    "dependencies": {
        "d3": "^7.8.5"
    }
}
