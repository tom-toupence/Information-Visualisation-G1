{
    "name": "information-visualisation-g1",
    "version": "1.0.0",
    "description": "Un projet de visualisation d'informations utilisant D3.js avec Node.js et TypeScript",
    "main": "dist/index.js",
    "scripts": {
        "build": "tsc && npm run copy-js",
        "copy-js": "copy dist\\index.js public\\index.js",
        "dev": "ts-node src/index.ts",
        "start": "node dist/index.js",
        "serve": "http-server public -p 3000 -o",
        "watch": "tsc --watch",
        "test": "ts-node test/runner.ts"
    },
    "keywords": [
        "d3.js",
        "typescript",
        "visualization",
        "data"
    ],
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "@types/d3": "^7.4.0",
        "@types/jest": "^30.0.0",
        "@types/node": "^20.19.22",
        "http-server": "^14.1.1",
        "jest": "^30.2.0",
        "ts-jest": "^29.4.5",
        "ts-node": "^10.9.2",
        "typescript": "^5.1.6"
    },
    "dependencies": {
        "d3": "^7.8.5"
    }
}